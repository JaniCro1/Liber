<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.libers.unnc.liber.fragments.GuidelistFragment">

    <!--<LinearLayout-->
    <!--android:orientation="vertical"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent">-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <com.libers.unnc.liber.view.NoScrollGridView
                android:id="@+id/gridView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:horizontalSpacing="0dp"
                android:listSelector="@android:color/transparent"
                android:numColumns="3"
                android:verticalSpacing="0dp"
                android:scrollbars="none" >





            </com.libers.unnc.liber.view.NoScrollGridView>


            <!--<GridView-->
            <!--android:id="@+id/gridView"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="501dp"-->
            <!--android:horizontalSpacing="0dp"-->
            <!--android:listSelector="@android:color/transparent"-->
            <!--android:numColumns="3"-->
            <!--android:verticalSpacing="0dp" />-->
            <Button
                android:text="Get Path"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_GetPath"
                android:layout_weight="1"
                android:background="@color/btn_color"
                android:textColor="#FFFFFF"
                />


        </LinearLayout>
    </ScrollView>


    <!--</LinearLayout>-->

    <LinearLayout
        android:id="@+id/empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:ico_color="@color/grid_empty_icon"
            app:ico_icon="gmd-import_contacts"
            app:ico_size="48dp" />

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Not found"
            android:textColor="@color/grid_empty_text"
            android:textSize="16sp" />

    </LinearLayout>

</RelativeLayout>


